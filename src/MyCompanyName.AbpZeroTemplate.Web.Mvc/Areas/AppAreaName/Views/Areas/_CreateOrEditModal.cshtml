

@using Abp.Organizations
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Common.Modals
@using MyCompanyName.AbpZeroTemplate.Web.Areas.AppAreaName.Models.Areas
@model CreateOrEditAreaModalViewModel
@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewArea")))
<div class="modal-body">
    <form name="AreaForm" role="form" novalidate class="form-validation" id="AreaForm">
        <input type="hidden" name="Id" value="@Model.AreaEdit.Id" />
        <div class="form-group">
            <label>@L("AreaId")</label>
            <input class="form-control" type="text" name="AreaId" required value="@Model.AreaEdit.AreaId" >
        </div>
        <div class="form-group">
            <label>@L("AreaName")</label>
            <input class="form-control" type="text" name="AreaName" required value="@Model.AreaEdit.AreaName" >
        </div>
        <div class="form-group">
            <label>@L("AreaDescription")</label>
            <input class="form-control" type="text" name="AreaDescription" value="@Model.AreaEdit.AreaDescription" >
        </div>
    </form>
</div>
@Html.Partial("~/Areas/AppAreaName/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")

